---
import { SITE_TITLE } from "../utils/constants";
import { NavigationLinks } from "../utils/constants";
---

<!-- Mobile Navigation -->
<nav
  id="mobile-nav-bar"
  class="md:hidden mb-8 transition-all h-16 bg-red-500 duration-300 ease-in-out"
>
  <div class="flex items-center justify-between px-4 py-2">
    <a href="/" class="text-4xl font-extrabold">{SITE_TITLE}</a>
    <button
      id="mobile-menu-button"
      type="button"
      class="p-2 rounded-md flex flex-col justify-center items-center gap-1.5 group"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span
        class="bar bar1 block w-6 h-0.5 bg-current transition-transform duration-300 ease-in-out
           group-[.open]:translate-y-2 group-[.open]:rotate-45"
      ></span>

      <span
        class="bar bar2 block w-6 h-0.5 bg-current transition-opacity duration-200 ease-in-out
           group-[.open]:opacity-0 group-[.open]:scale-x-0"
      ></span>

      <span
        class="bar bar3 block w-6 h-0.5 bg-current transition-transform duration-300 ease-in-out
           group-[.open]:-translate-y-2 group-[.open]:-rotate-45"
      ></span>
    </button>
  </div>

  <div
    id="mobile-menu"
    class="overflow-hidden
            transition-[max-height,opacity] duration-300 ease-in-out
            max-h-0 opacity-0 pointer-events-none"
    aria-hidden="true"
  >
    <div class="flex flex-col items-center justify-around h-[50svh]">
      {
        NavigationLinks.map((link) => (
          <a href={link.href} class="block text-lg font-medium">
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<!-- Desktop Navigation -->
<nav id="desktop-nav-bar" class="hidden md:flex bg-red-400 mb-8 h-16 px-4 py-2">
  <a href="/" class="text-4xl font-extrabold">{SITE_TITLE}</a>
  <div class="flex gap-8 items-center justify-center w-full">
    <div class="flex items-center gap-8">
      {
        NavigationLinks.map((link) => (
          <a href={link.href} class="text-md hover:underline">
            {link.name}
          </a>
        ))
      }
    </div>
