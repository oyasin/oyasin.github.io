---
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";

const { post, withImage = true } = Astro.props;
---

<div>
  <a href={`/blog/${post.id}/`}>
    {
      post.data.heroImage && withImage && (
        <Image width={720} height={360} src={post.data.heroImage} alt="" />
      )
    }
    <a href={`/blog/${post.id}/`} class="no-underline hover:underline">
      <h4 class="title text-indigo-500">{post.data.title}</h4>
    </a>
    <span>
      <small class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"
          ></path>
        </svg>
        <small class="italic">
          <FormattedDate date={post.data.pubDate} />
        </small>
      </small>
      <span class="line-clamp-3">{post.data.description}</span>
    </span>
  </a>
</div>
